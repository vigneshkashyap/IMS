<%- include("partials/nav", {user: user}) %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center"><%=policy.name%></h1>
            <div class="input-group mb-3 form-group">
                <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Policy Duration:</span>
                </div>
                <input type="text" id="phone" style="width:60px" name="validity" class="form-control" value="<%=policy.validity%>" readonly="true" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
                <div class="input-group-append">
                <span class="input-group-text">years</span>
                </div>
            </div>
            <div class="input-group mb-3 form-group">
                <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Insurance Company</span>
                </div>
                <input type="text" id="phone" name="company" value="<%=policy.company%>" readonly="true"class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
            </div>
            <%if(user.role!="Agent"){%>
            <div class="input-group mb-3 form-group">
                <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Agent</span>
                </div>
                <input type="text" id="phone" name="company" value="<%=policy.AgentName%>" readonly="true"class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
            </div>
            <%}%>
            <div class="input-group mb-3 form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">â‚¹</span>
                </div>
                <input type="text" class="form-control" value="<%=policy.cost%>" readonly="true" name="cost" aria-label="Amount (to the nearest dollar)">
                <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Terms and Conditions:</label>
                <textarea name="terms" class="form-control" readonly="true" id="exampleFormControlTextarea1" rows="8" required><%=policy.terms%></textarea>
            </div>
        </div>
    </div>
    <% if(user.role=="Admin" && policy.approve==0) {%>
        <form class="form-group" id="confirm" action="/policy/get/<%= policy._id%>?_method=PUT" method="POST">
            <button class="btn btn-success">Approve</button>
        </form>
        <form id="delete" action="/policy/get/<%= policy._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Deny</button> 
        </form>
    <%}else if(user.role=="Admin" && policy.approve==1){%>
        <form id="delete" action="/policy/get/<%= policy._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button> 
        </form>
    <%}else if(user.role=="Customer" && user.policy.length<1){%>
        <form id="select" action="/policy/payment/<%=policy._id%>" method="GET">
            <button class="btn btn-success">Confirm Policy</button>
        </form>
    <%}else if(user.role=="Customer" && option=="1"){%>
        <form action="/policy/remove/<%= user._id %>?_method=PUT" method="POST">
            <button class="btn btn-danger">Deactivate the insurance</button> 
        </form>
    <%}else if(user.role=="Agent"){%>
        <form id="delete" action="/policy/get/<%= policy._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button> 
        </form>
    <%}%>   
</div>
<%- include("partials/footer") %>