<%- include("partials/nav", {user: user}) %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">List Insurance Policy:</h1>
            <form action="/policy/listpolicy" method="POST">
                <div class="input-group mb-3 form-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroup-sizing-default">Name of Policy:</span>
                    </div>
                    <input type="text" id="phone" name="name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
                </div>
                <div class="input-group mb-3 form-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroup-sizing-default">Policy Duration:</span>
                    </div>
                    <input type="text" id="phone" name="validity" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
                    <div class="input-group-append">
                      <span class="input-group-text">years</span>
                    </div>
                </div>
                <div class="input-group mb-3 form-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroup-sizing-default">Insurance Company:</span>
                    </div>
                    <input type="text" id="phone" name="company" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
                </div>
                <div class="input-group mb-3 form-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">â‚¹</span>
                  </div>
                  <input type="text" class="form-control" name="cost" aria-label="Amount (to the nearest dollar)">
                  <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                  </div>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Terms and Conditions:</label>
                    <textarea name="terms" class="form-control" id="exampleFormControlTextarea1" rows="8" required></textarea>
                  </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>

  
<%- include("partials/footer") %>